{
  "name": "rate-limiting-demo",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && bun run dev",
    "server": "bun run backend/index.ts",
    "build": "cd frontend && bun run build",
    "dev:all": "concurrently \"bun run server\" \"bun run dev\"",
    "build:all": "bun run build",
    "serve:prod": "bun run build:all && bun run server"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "typescript": "^5.3.0"
  }
}
